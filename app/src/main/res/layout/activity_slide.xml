<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.alvise.provafoto.MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?selectableItemBackground"
        tools:ignore="UnusedAttribute">

        <LinearLayout
            android:id="@+id/controls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/controlsFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/message"
                    android:layout_width="760dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical|start"
                    android:background="@android:color/darker_gray"
                    android:backgroundTint="?android:attr/colorButtonNormal"
                    android:fontFamily="sans-serif-medium"
                    android:hint='"Inserire descrizione foto"'
                    android:inputType="textCapSentences|textAutoCorrect"
                    android:scaleType="fitXY"
                    android:textColor="@android:color/black"
                    android:visibility="visible" />


                <LinearLayout
                    android:id="@+id/buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">


                    <Button
                        android:id="@+id/confirm"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"
                        android:text="Salva descrizione"
                        android:textColor="@android:color/black"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/remove"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"
                        android:text="Elimina foto"
                        android:textColor="@android:color/black"
                        android:visibility="visible" />

                </LinearLayout>   -->

            </LinearLayout>


            <android.support.v4.view.ViewPager
                android:id="@+id/viewPageAndroid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                />


        </LinearLayout>

    </FrameLayout>

</RelativeLayout>